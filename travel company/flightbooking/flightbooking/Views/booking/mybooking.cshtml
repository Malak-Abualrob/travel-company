@model IEnumerable<flightbooking.Models.booking>

<h2>my bookings</h2>

<table border="1">
    <tr>
        <th>flight</th>
        <th>from</th>
        <th>to</th>
        <th>leave date</th>
        <th>arrive date</th>
        <th>number of seats</th>
        <th>total price</th>
        <th>status</th>
        <th>do</th>
    </tr>
    @foreach (var booking in Model)
    {
        <tr>
            <td>@booking.Trip.Airline?.Name</td>
            <td>@booking.Trip.FromCity</td>
            <td>@booking.Trip.ToCity</td>
            <td>@booking.Trip.DepartureDateTime.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@booking.Trip.ArrivalDateTime.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@booking.SeatsBooked</td>
            <td>@(booking.SeatsBooked* booking.Trip.Price).ToString("C")</td>
            <td>@booking.Status</td>
            <td>
                <a asp-action="Cancel" asp-route-id="@booking.BookingId">cancel</a>
            </td>
        </tr>
    }
</table>